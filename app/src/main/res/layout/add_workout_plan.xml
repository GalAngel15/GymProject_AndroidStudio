<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#100B0B"
    tools:context=".activities.AddWorkoutPlanActivity">

    <!-- כותרת -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תוכנית אימונים"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:textColor="#ECF400"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="משקל"
            android:textColor="#ECF400"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="כמות חזרות"
            android:textColor="#ECF400"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="כמות סטים"
            android:textColor="#ECF400"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="שם התרגיל"
            android:textColor="#ECF400"/>
    </LinearLayout>

    <Button
        android:id="@+id/buttonFinishPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="סיום בניית תוכנית"
        android:layout_gravity="center"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonAddCustomExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="הוספת תרגיל בהתאמה אישית"
        android:layout_gravity="center"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginTop="16dp"/>
</LinearLayout>
